@using WarehouseInventoryManagement.Web.Helpers
@{
    var loginPage = HttpContext.Current.Request.Url.AbsolutePath.ToLower().Contains("account/login");
}	
<div class="shell">
		<!-- Logo + Top Nav -->
		<div id="top">
		    <h1><a href="/">Sandėlio inventoriaus valdymo sistema</a></h1>
            @if (!loginPage)
            {
                <div id="top-navigation">
				    Welcome <a href="#"><strong>Administrator</strong></a>
				    <span>|</span>
				    <a href="#">Profile Settings</a>
                    <span>|</span>
                    @Html.ActionLink("Atsijungti", MVC.Account.Logout())
			    </div>    
            }
			
		</div>
		<!-- End Logo + Top Nav -->
		
    <!-- Main Nav -->
    @if (!loginPage)
    {
        <div id="navigation">
			<ul>
			    <li><a href="@Url.Action(MVC.User.List())" @Html.IsActive(MVC.User.List()) ><span>Vartotojai</span></a></li>
			    <li><a href="@Url.Action(MVC.Product.List())" @Html.IsActive(MVC.Product.List()) ><span>Inventorius</span></a></li>
			    <li><a href="#"><span>User Management</span></a></li>
			    <li><a href="#"><span>Photo Gallery</span></a></li>
			    <li><a href="#"><span>Products</span></a></li>
			    <li><a href="#"><span>Services Control</span></a></li>
			</ul>
		</div>
    }
		
		<!-- End Main Nav -->
	</div>