@using Links
@using WarehouseInventoryManagement.Tools.Extensions

@model  WarehouseInventoryManagement.Models.Models.Item.ItemEditViewModel
@{ 
    Layout = MVC.Shared.Views.Layouts.BaseLayout;
}


<!-- Box -->
				<div class="box single-form">
					<!-- Box Head -->
					<div class="box-head">
					    <h2>Redaguoti įrašą</h2>
					    <div class="right">
					         <a href="@Url.Action(MVC.Item.GenerateQRCode(Model.Id))" target="_blank" class="print-button add-head"><span>Spausdinti QR kodą</span></a>
					    </div>
					</div>
				    <!-- End Box Head -->
     @{
        Html.RenderPartial(MVC.Shared.Views.Partial.Message,Model.Message);
    }

		@using (Html.BeginForm(MVC.Item.Edit(), FormMethod.Post, new {id = "login-form"}))
		{
		        <!-- Form -->
		    <div class="form">
		        @Html.HiddenFor(x => x.Id)
		        <p>
		            @Html.LabelFor(m => m.Id)
		            <span>
                        @Html.DisplayTextFor(m => m.Id)
                    </span>
		        </p>
		        <p>
		            @Html.LabelFor(m => m.Name)
		            @Html.TextBoxFor(m => m.Name, new { @class = "field size-login"})
		            @Html.ValidationMessageFor(m => m.Name)
		        </p>
		        <p>
		            @Html.LabelFor(m => m.SerialNumber)
		            @Html.TextBoxFor(m => m.SerialNumber, new { @class = "field size-login"})
		            @Html.ValidationMessageFor(m => m.SerialNumber)
		        </p>
		        <p>
		            @Html.LabelFor(m => m.Type)
		            @Html.DropDownListFor(m => m.Type, Model.Type.ToSelectList(), new { @class = "field size-login"})
		            @Html.ValidationMessageFor(m => m.Type)
		        </p>
		        <p>
		            @Html.LabelFor(m => m.Height)
		            @Html.TextBoxFor(m => m.Height, new { @class = "field size-login"})
		            @Html.ValidationMessageFor(m => m.Height)
		        </p>
		        <p>
		            @Html.LabelFor(m => m.Length)
		            @Html.TextBoxFor(m => m.Length, new { @class = "field size-login"})
		            @Html.ValidationMessageFor(m => m.Length)
		        </p>
		        <p>
		            @Html.LabelFor(m => m.Width)
		            @Html.TextBoxFor(m => m.Width, new { @class = "field size-login"})
		            @Html.ValidationMessageFor(m => m.Width)
		        </p>
		        <p>
		            @Html.LabelFor(m => m.Weight)
		            @Html.TextBoxFor(m => m.Weight, new { @class = "field size-login"})
		            @Html.ValidationMessageFor(m => m.Weight)
		        </p>
                <p>
		            @Html.LabelFor(m => m.States)
		            @Html.DropDownListFor(m => m.States, Model.States.ToSelectList(), new { @class = "field size-login"})
		            @Html.ValidationMessageFor(m => m.States)
		        </p>


		    </div>
      
      
		        <!-- End Form -->
						
		        <!-- Form Buttons -->
		        <div class="buttons">
		            <input type="submit" class="button" value="Išsaugoti" />
		        </div>
		        <!-- End Form Buttons -->
		    
		}
				</div>
<!-- End Box -->
@section HeaderSection{
    <script src="@Scripts.item_js" type="text/javascript"></script>
}