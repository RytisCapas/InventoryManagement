@using Links
@using WarehouseInventoryManagement.Models.Models.User

@model  UserViewModel
@{ 
    Layout = MVC.Shared.Views.Layouts.BaseLayout;
}

<!-- Box -->
<div class="box single-form">
   
    <!-- Box Head -->
    <div class="box-head">
        <h2>Redaguoti vartotojo informaciją</h2>
    </div>
    
    @{
        Html.RenderPartial(MVC.Shared.Views.Partial.Message,Model.Message);
    }

    <!-- End Box Head -->
    @using (Html.BeginForm(MVC.User.Edit(), FormMethod.Post, new {id = "login-form"}))
    {
        <!-- Form -->
        @Html.HiddenFor(x => x.Id)
        <div class="form">
            <p>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { @class = "field size-login", @readonly="readonly"})
                @Html.ValidationMessageFor(m => m.UserName)
            </p>
            <p>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "field size-login"})
                @Html.ValidationMessageFor(m => m.Password)
            </p>
            <p>
                @Html.LabelFor(m => m.PasswordConfirmation)
                @Html.PasswordFor(m => m.PasswordConfirmation, new { @class = "field size-login"})
                @Html.ValidationMessageFor(m => m.PasswordConfirmation)
            </p>		
                
            <p>
                @Html.LabelFor(m => m.FirstName)
                @Html.TextBoxFor(m => m.FirstName, new { @class = "field size-login"})
                @Html.ValidationMessageFor(m => m.FirstName)
            </p>
            <p>
                @Html.LabelFor(m => m.LastName)
                @Html.TextBoxFor(m => m.LastName, new { @class = "field size-login"})
                @Html.ValidationMessageFor(m => m.LastName)
            </p>
                
            <p>
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "field size-login"})
                @Html.ValidationMessageFor(m => m.Email)
            </p>

                
            <p>
                @Html.LabelFor(m => m.Country)
                @Html.TextBoxFor(m => m.Country, new { @class = "field size-login"})
                @Html.ValidationMessageFor(m => m.Country)
            </p>				
            <p>
                @Html.LabelFor(m => m.City)
                @Html.TextBoxFor(m => m.City, new { @class = "field size-login"})
                @Html.ValidationMessageFor(m => m.City)
            </p>
            <p>
                @Html.LabelFor(m => m.StreetRow)
                @Html.TextBoxFor(m => m.StreetRow, new { @class = "field size-login"})
                @Html.ValidationMessageFor(m => m.StreetRow)
            </p>		
            <p class="title">Kategorijos:</p>
            <p>
                @Html.LabelFor(m => m.IsAdmin, new { @class = "checkbox-label"})
                @Html.CheckBoxFor(m => m.IsAdmin, new { @class = "checkbox"})
                @Html.ValidationMessageFor(m => m.IsAdmin)
            </p>
            <p>
                @Html.LabelFor(m => m.IsWorker, new { @class = "checkbox-label"})
                @Html.CheckBoxFor(m => m.IsWorker, new { @class = "checkbox"})
                @Html.ValidationMessageFor(m => m.IsWorker)
            </p>
        </div>
      
      
        <!-- End Form -->
						
        <!-- Form Buttons -->
        <div class="buttons">
            <input type="submit" class="button" value="Išsaugoti" />
        </div>
        <!-- End Form Buttons -->
		    
    }
</div>
<!-- End Box -->

@section HeaderSection{
    <script src="@Scripts.user_js" type="text/javascript"></script>
}