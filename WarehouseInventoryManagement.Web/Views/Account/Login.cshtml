@model WarehouseInventoryManagement.Web.Logic.Models.LogOnModel
@{
    Layout = MVC.Shared.Views.Layouts.BaseLayout;
}

<div class="login-form">
<!-- Box -->
				<div class="box">
					<!-- Box Head -->
					<div class="box-head">
						<h2>Prisijungimas prie sistemos</h2>
					</div>
					<!-- End Box Head -->
		@using (Html.BeginForm(MVC.Account.Login(), FormMethod.Post, new {id = "login-form"}))
		{
		        <!-- Form -->
		    <div class="form">
		        <p>
		            @Html.LabelFor(m => m.UserName)
		            @Html.TextBoxFor(m => m.UserName, new { @class = "field size-login"})
		        </p>
		        <p>
		            @Html.LabelFor(m => m.Password)
		            @Html.PasswordFor(m => m.Password, new { @class = "field size-login"})
		        </p>							
		    </div>
            @Html.HiddenFor(m => m.ReturnUrl)
      
		    @Html.ValidationSummary(true)
      
		        <!-- End Form -->
						
		        <!-- Form Buttons -->
		        <div class="buttons">
		            <input type="submit" class="button" value="Prisijungti" />
		        </div>
		        <!-- End Form Buttons -->
		    
		}
				</div>
<!-- End Box -->
</div>